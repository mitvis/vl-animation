{
  "width": 500,
  "height": 300,
  "data": {
    "url": "https://gist.githubusercontent.com/dwootton/a3c02e0f170d0b84638e014c63d1f908/raw/6a9504ac7ba878f18799e2e3777ca766e4953ddc/dunkins_no_24_hr.csv"
  },  
  "projection": {
    "type": "albersUsa"
  },
  "transform": [{
    "filter": "datum.open_datetime <= anim_val_curr && anim_val_curr < datum.closed_datetime"
  }],  
  "mark": "circle",
  "encoding": {
    "longitude": {
      "field": "longitude",
      "type": "quantitative"
    },
    "latitude": {
      "field": "latitude",
      "type": "quantitative"
    },
    "color": {
      "value": "#FFFAA0"
    },
    "time": {
      "field": "open_datetime",
      "scale": {
        "type": "linear",
        "range": [
          0.0,
          24.0
        ]
      }
    }
  },
  "enter" : {
    "encoding":{
      "opacity":0
    }
  },
  "exit" : {
    "encoding":{
      "opacity":0
    }
  }
}
