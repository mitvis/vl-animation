{
    "width": 1000,
    "height": 1000,
    "data": {
        "url": "https://gist.githubusercontent.com/jonathanzong/5f4fa36e8c2cd04639bc550540264dc6/raw/3acfc06e88d2f26ca797be116a813dcc0225bc70/tidy_covid19_global_data.csv"
    },
    "transform": [{
            "window": [{
                "op": "mean",
                "field": "new_daily",
                "as": "new_weekly_avg"
            }],
            "groupby": ["country"],
            "sort": [{
                "field": "date",
                "order": "ascending"
            }],
            "ignorePeers": false,
            "frame": [-7, 0]
        },
        {
            "filter": "datum.cases > 0 && datum.new_daily > 0"
        }
    ],
    "encoding": {
        "x": {
            "field": "cases",
            "type": "quantitative",
            "scale": {
                "type": "log"
            },
            "axis": {
                "grid": false
            }
        },
        "y": {
            "field": "new_weekly_avg",
            "type": "quantitative",
            "scale": {
                "type": "log"
            },
            "axis": {
                "grid": false
            }
        },
        "color": {
            "field": "country"
        },
        "time": {
            "field": "date",
            "scale": {
                "type": "band",
                "range": {
                    "step": 50
                }
            },
            "continuity": {
                "field": "country"
            },
            "interpolateLoop": false,
            "rescale": false
        }
    },
    "layer": [{
            "mark": "point",
            "encoding": {
                "time": {
                    "field": null,
                    "scale": null,
                    "continuity": null,
                    "interpolateLoop": false,
                    "rescale": false
                }
            },
            "transform": [{
                "filter": {
                    "time": [{
                        "equal": "datum.date"
                    }]
                }
            }]
        },
        {
            "mark": "line",
            "encoding": {
                "time": {
                    "field": null,
                    "scale": null,
                    "continuity": null,
                    "interpolateLoop": false,
                    "rescale": false
                }
            },
            "transform": [{
                "filter": {
                    "time": [{
                        "lte": "datum.year"
                    }]
                }
            }]
        }
    ]
}