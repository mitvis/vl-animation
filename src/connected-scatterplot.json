{
  "width": 1000,
  "height": 1000,
  "data": {"url": "https://raw.githubusercontent.com/vega/vega-datasets/master/data/driving.json"},
  "transform": [{
    "calculate": "':)'", "as": "key"
  }],
  "mark": "circle",
  "encoding": {
    "x": {
      "field": "miles", "type": "quantitative",
      "scale": {"zero": false}
    },
    "y": {
      "field": "gas", "type": "quantitative",
      "scale": {"zero": false}
    },
    "order": {"field": "year"},
    "time": {
      "field": "year",
      "scale": {
        "type": "band",
        "range": {"step": 200}
      },
      "continuity": {"field": "key"},
      "past": {
        "mark": "line"
      }
    }
  }
}